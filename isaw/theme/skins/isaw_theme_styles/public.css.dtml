    padding: 0.25em 1em;
    margin-bottom: 0;
}
#portal-sitemap .navTreeLevel2,
#portal-sitemap .navTreeLevel2 ul {
    font-size: 85%;
    font-weight: normal;
    margin-bottom: 0;
    padding: 0.25em 0;
}

/* Events */
.eventDetails {
    float: right;
    clear: right;
    margin: 0 0 0.5em 1em;
}

