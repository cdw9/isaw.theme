/* Overlays                                                                  */

/* styling for overlays (popups) */
.overlay {
    width: auto;
    height: auto;
    display: none;
    margin: 1em;
    font-size: 80%;
}
.overlay-iframe,
.overlay-ajax {
    width: 60%;
    min-height: 100px;
    z-index: 99;
}
.overlay-iframe {
    height: 60%;
}
.overlaybg .close,
.overlay .close {
    background-image: url(pb_close.png);
    position: absolute;
    left: -14px;
    top: -14px;
    cursor: pointer;
    height: 30px;
    width: 30px;
}
.pb-ajax {
    overflow-y: auto;
}
.pb-ajax, .pb-image {
    background-color: #fff;
    border: &dtml-borderWidth; &dtml-borderStyle; #999;
    white-space: normal;
