/* TEMPLATES                                                                 */

/* folder listings */
#content .link-overlay {
    border-bottom: 1px dotted &dtml-primaryColor;;
}
dt .documentByLine {
    font-weight: normal;
}

/* search results page */
form.searchPage {
    text-align: center;
}
input.searchPage {
    font-size: 200%;
}

/* Sitemap */
