/*
  <dtml-with base_properties> (do not remove this)
  <dtml-call "REQUEST.set('portal_url', portal_url())"> (not this either)
*/

body {
    background-color: #6f5c54;
}

#visual-portal-wrapper {
    width: 932px;
    margin: 25px auto;
    background: transparent url(&dtml-portal_url;/site_bg.png) repeat-y;
    padding: 0 0 0 64px;
}

#portal-top {
    width: 919px;
    margin-left: 1px;
    *height: 119px; /* absolute header */
}

#portal-header {
    *width: 919px; /* absolute header */
    *position: absolute; /* absolute header for IE <= 7 */
}

#portal-columns {
    width: 911px;
    margin: 6px 8px 0 1px;
}

#portal-column-two {
    background: url(&dtml-portal_url;/title_border.png) repeat-x 0 4px;
}

#content {
    background: url(&dtml-portal_url;/title_border.png) repeat-x 0 -19px;
    margin: 0 0 24px 0;
}

#portal-column-content {
    padding-left: 35px;
}

#portal-column-two .visualPadding {
    padding: 36px 0 0 15px;
}

/* VIEWLETS */

/* personal bar */
#portal-personaltools-wrapper {
    position: absolute;
    *position: relative;
    margin: -20px 0 0 -12px;
    top: 0;
    padding-right: 15px;
    width: 927px;
    text-align: right;
    background: url(&dtml-portal_url;/site_top.png) no-repeat 0 10px;
    height: 25px;
    font-family: 'Trebuchet MS', sans-serif;
}

#portal-personaltools {
    background: transparent;
    margin-left: 0;
}

#portal-personaltools .actionMenuHeader {
    padding: 0;
}

#header-links a,
#portal-personaltools a {
    color: #ffffff;
}

#header-links a:hover,
#portal-personaltools a:hover {
    color: &dtml-neutralColor;;
}

#portal-personaltools .actionMenuContent a {
    color: &dtml-primaryColor;;
}

#header-links {
    float: right;
}

#header-links li {
    margin-right: 15px;
}

/* social buttons */
#social-buttons {
    position: absolute;
    left: 925px;
    top: 1px;
}

#social-buttons li {
    display: list-item;
    margin-bottom: 5px;
}

#social-buttons a {
    display: block;
    width: 18px;
    height: 18px;
    background: url(&dtml-portal_url;/social.png) no-repeat left top;
    text-indent: -9999px;
}

#social-buttons .tw a {
    background-position: 0 -25px;
}

#social-buttons .rss a {
    background-position: 0 -50px;
}

#social-buttons a:hover {
    background-position: -22px 0;
}

#social-buttons .tw a:hover {
    background-position: -22px -25px;
}

#social-buttons .rss a:hover {
    background-position: -22px -50px;
}

/* search */
#portal-searchbox {
    margin: 5px 0 24px;
    *margin-top: 0;
    *float: none; /* absolute header */
}

.LSBox {
    padding: 0;
    *float: right; /* absolute header */
}

#searchGadget {
    border: 1px solid #a7a4a0;
    background: #eeece7 url(&dtml-portal_url;/search_button.gif) no-repeat top right;
    font-size: &dtml-fontSmallSize;;
    height: 13px;
    line-height: 13px;
    padding-left: 3px; 
}

#portal-searchbox .searchButton {
    border: none;
    background-color: transparent;
    cursor: pointer;
    width: 15px;
    height: 13px;
    margin: 0 0 0 -15px;
    position: absolute;
}

#portal-searchbox .searchSection {
    display: none;
}

/* logo */
#isaw-logo {
    position: absolute;
    margin-left: -65px;
    top: 0px;
}

#portal-logo {
    float: none;
}

#portal-logo img {
    margin: 0 0 30px 8px;
    *margin-top: 40px; /* absolute header */
}

/* breadcrumbs */
#portal-breadcrumbs {
    font-size: &dtml-fontSmallSize;;
    color: #666666;
    line-height: 8px;
    margin-bottom: 15px;
}

#portal-breadcrumbs a {
    color: #666666;
}

#breadcrumbs-current {
    color: #333333;
}

/* global nav */
#portal-column-nav {
    width: 133px;
    background-color: &dtml-neutralColor;;
}

#portal-globalnav {
    background-color: #cdb08a;
    font-family: "Trebuchet MS", sans-serif;
    padding: 5px 0;
}

#portal-globalnav li {
    display: list-item;
    float: none;
}

#portal-globalnav li a {
    background: transparent;
    color: #ffffff;
    padding: 2px 5px;
    margin-bottom: 5px;
    border: none;
    text-transform: uppercase;
    display: block;
}

#portal-globalnav li a:hover,
#portal-globalnav li.hover a,
#portal-globalnav li.selected.hover a,
#portal-globalnav li.selected a:hover {
    color: &dtml-primaryColor;;
    background-color: #e6ccac;
}

#portal-globalnav li.selected a {
    color: &dtml-primaryColor;;
    background-color: transparent;
}

#portal-column-nav .contact {
    text-indent: -99999px;
    background: url(&dtml-portal_url;/contact.gif) no-repeat;
    margin: 50px 0 50px 4px;
    height: 81px;
}
    
    /* dropdowns */
    #portal-globalnav ul {
        margin: -24px 0 0 129px !important;
        border: none;
        background-color: #e6ccac;
        opacity: 0.9;
        font-size: 11px;
    }
    
    #portal-globalnav ul.submenu a,
    #portal-globalnav li.selected.hover ul.submenu a {
        border: none;
        text-transform: none;
        color: #716558;
        padding-left: 15px;
    }
    
    #portal-globalnav ul.submenu a:hover,
    #portal-globalnav li.selected ul.submenu a:hover {
        color: &dtml-primaryColor;;
        border: none;
        background-color: transparent;
    }
    
    #portal-globalnav ul.submenu a:hover span {
        text-decoration: underline;
    }
    
/* site actions */
#portal-siteactions {
    position: absolute;
    text-align: right;
    font-size: &dtml-fontSmallSize;;
    background: url(&dtml-portal_url;/site_bottom.png) no-repeat;
    width: 923px;
    padding: 12px 12px 20px 0;
    margin: -5px 0 0 -4px;
}

#portal-siteactions li {
    margin: 0 0 0 25px;
}

#portal-siteactions a {
    color: #ffffff;
}

#portal-siteactions a:hover {
    color: &dtml-neutralColor;;
}

/* PORTLETS */
.portlet {
    background-color: &dtml-neutralColor;;
}

.portlet dt {
    background-color: transparent;
    font-weight: normal;
    color: &dtml-primaryColor;;
    padding: 8px 8px 0;
}

.portlet dt a,
.portlet dt a:visited {
    color: &dtml-primaryColor;;
}

.portlet .portletItem {
    padding: 8px;
    font-size: 13px;
}

.portlet .portletItem a,
.portlet .portletItem a:visited {
    color: #4d4d4d;
}

.portlet .portletItem a:hover {
    text-decoration: underline;
}

/* CONTENT */
#content .documentFirstHeading {
    line-height: 22px;
    display: inline-block;
    *display: block;
    margin: -6px 0 15px;
    background-color: #F3F1EB;
}

/* EDITING */
#text_ifr {
    background-color: #ffffff;
}


/* </dtml-with> */

