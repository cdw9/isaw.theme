/*
  <dtml-with base_properties> (do not remove this)
  <dtml-call "REQUEST.set('portal_url', portal_url())"> (not this either)
*/

.template-faculty_detail #portal-column-two,
.template-faculty_cv #portal-column-two,
.template-faculty_publications #portal-column-two {
    overflow: hidden;
}

.template-faculty_detail #portal-column-two .visualPadding,
.template-faculty_cv #portal-column-two .visualPadding,
.template-faculty_publications #portal-column-two .visualPadding {
    background-color: #E2DED5;
    padding-bottom: 9999999px;
    margin-bottom: -9999999px;
}

/* faculty main */
.template-faculty_main #content-core {
    margin-top: 10px;
}

.facultyListing {
    margin-bottom: 14px;
    clear: both;
    width: 550px;
}

.facultyListing img {
    float: left;
    width: 96px;
    height: auto;
    border: 5px solid #ffffff;
}

.facultyListing .facultyInfo {
    margin-left: 112px;
    position: relative;
}

.facultyInfo h2 {
    line-height: 1em;
}

#content .facultyListing p {
    margin: 0;
}

.facultyTitle {
    color: &dtml-primaryColor;;
    font-size: 17px;
}

.facultyPosition {
    color: #757575;
    font-weight: bold;
}

.alignBottom {
    position: absolute;
    bottom: 0;
}

.facultyEmail {
    color: &dtml-primaryColor;;
    line-height: 1em;
}

.moreInfo {
    color: #808080;
    font-size: 12px;
    background: url("&dtml-portal_url;/gray_bullet.png") no-repeat 0 5px;
    padding-left: 7px;
    text-transform: lowercase;
}

/* faculty detail */
#content .facultyTitles {
    font-size: 15px;
    margin: 0;
}

.facultyContact {
    margin: 15px 0;
    border-color: &dtml-primaryColor;;
    border-width: 1px 0;
    border-style: solid;
    padding: 3px 0;
    text-align: center;
}

.facultyContact a {
    float: left;
}

.facultyContact .address {
    float: right;
}

.viewButton {
    background-color: #e2ded5;
    text-align: center;
    width: 48%;
    margin: 15px 5px 15px 0;
    float: left;
    padding: 4px 0;
}

.viewButton a {
    background: url("&dtml-portal_url;/red_arrow.gif") no-repeat right center;
    padding-right: 15px;
}

.title {
    font-style: italic;
}

/* Publications */

.publicationLeftColumn {
    float: left;
    font-size: 17px;
    font-weight: bold;
    margin-top: 5px;
}
.bookDisplay,
.articleDisplay {
    float: right;
    width: 80%;
    margin: 5px 0;
}
.publicationTitle {
    font-style: italic;
}
.publicationDetails {
    color: #666666;
    font-size: 13px;
}
#bookSection,
#articleSection {
    margin: 15px 0;
}

/* CV */
#faculty-cv {
    width: 100%;
}

#faculty-cv th {
    font-size: 17px;
    padding-bottom: 5px;
    text-align: left;
}

#faculty-cv td {
    padding-bottom: 22px;
    line-height: 17px;
}

#faculty-cv a {
    font-size: 12px;
}

#faculty-cv .rightalign {
    text-align: right;
    width: 100px;
    padding-right: 10px;
}

#faculty-cv .details {
    color: #666666;
    font-size: 12px;
}

/* </dtml-with> */